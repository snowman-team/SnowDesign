<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="?attr/designPageStartEndPadding">

        <TextView
            style="@style/DesignSnowball.Text.Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Select type" />

        <Spinner
            android:id="@+id/spinner_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:entries="@array/type"
            android:spinnerMode="dropdown" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?attr/designDividerColor" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="?attr/designPageStartEndPadding">

        <TextView
            style="@style/DesignSnowball.Text.Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Enable" />

        <CheckBox
            android:id="@+id/check_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:checked="true" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?attr/designDividerColor" />

    <com.xueqiu.design.input.TextInputView
        android:id="@+id/edt_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="?attr/designPageStartEndPadding"
        app:error_enable="false"
        app:hint="Radius" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?attr/designDividerColor" />

    <com.xueqiu.design.button.SnowButton
        android:id="@+id/btn_large"
        style="@style/DesignSnowball.Button.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Large Button"
        app:mode="primary" />

    <com.xueqiu.design.button.SnowButton
        android:id="@+id/btn_normal"
        style="@style/DesignSnowball.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Normal Button"
        app:mode="primary" />

    <com.xueqiu.design.button.SnowButton
        android:id="@+id/btn_small"
        style="@style/DesignSnowball.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Small Button"
        app:mode="primary" />


</LinearLayout>