<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DesignTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/design_blu_117</item>
        <item name="colorPrimaryDark">@color/design_blu_119</item>
        <item name="colorAccent">@color/design_blk_102</item>
        <item name="android:windowBackground">?attr/designWindowBackgroundColor</item>

        <item name="designWindowBackgroundColor">@color/design_blk_16</item>
        <item name="designCardBackgroundColor">@color/design_blk_26</item>
        <item name="designTextTitleSizePrimary">@dimen/design_text_size_h2</item>
        <item name="designTextTitleSizeSecondary">@dimen/design_text_size_h3</item>
        <item name="designTextTitleSizeTertiary">@dimen/design_text_size_h4</item>
        <item name="designTextTitleColorPrimary">@color/design_blk_194</item>
        <item name="designTextTipSizePrimary">@dimen/design_text_size_p4</item>
        <item name="designTextTipSizeSecondary">@dimen/design_text_size_p7</item>
        <item name="designTextTipColorPrimary">@color/design_blk_136</item>
        <item name="designTextHintSizePrimary">@dimen/design_text_size_p4</item>
        <item name="designTextHintColorPrimary">@color/design_blk_102</item>
        <item name="designTextErrorSizePrimary">@dimen/design_text_size_p7</item>
        <item name="designTextErrorColorPrimary">@color/design_red_106</item>
        <item name="designTextContentSizePrimary">@dimen/design_text_size_p2</item>
        <item name="designTextContentSizeSecondary">@dimen/design_text_size_p3</item>
        <item name="designTextContentSizeTertiary">@dimen/design_text_size_p4</item>
        <item name="designTextContentColorPrimary">@color/design_blk_194</item>
        <item name="designTextToastSize">@dimen/design_text_size_p4</item>
        <item name="designTextToastColor">@color/design_blk_255</item>
        <item name="designBackgroundToast">@color/design_blk_a70</item>
        <item name="designDividerColor">@color/design_blk_16</item>
        <item name="designPageStartEndPadding">16dp</item>
        <item name="designPageTopBottomPadding">10dp</item>
        <item name="designColorPositive">@color/design_blu_117</item>
        <item name="designColorNegative">@color/design_blk_102</item>
        <item name="designColorWarning">@color/design_org_147</item>
    </style>

    <style name="DesignTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DesignTheme.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
    </style>

</resources>