<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/designCardBackgroundColor"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/designDividerColor" />

    <FrameLayout
        android:id="@+id/layout_extra_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="100dp" />

    <com.xueqiu.design.button.SnowButton
        android:id="@+id/btn_cancel"
        style="@style/DesignSnowball.Text.Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="Cancel"
        app:mode="custom" />

</LinearLayout>